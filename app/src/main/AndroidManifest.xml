<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.LetsSnack"
        tools:targetApi="31">
        <activity
            android:name=".presentation.profile.EditData"
            android:exported="false" />
        <activity
            android:name=".presentation.register.restriction.RestrictionRegister"
            android:exported="false" />
        <activity
            android:name=".presentation.register.RegisterActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".presentation.useTerms.UseTerms"
            android:exported="false"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan"
            />
        <activity
            android:name=".presentation.login.LoginActivity"
            android:exported="false"
            android:screenOrientation="locked" />
        <activity
            android:name=".presentation.register.photo.PhotoRegister"
            android:exported="false"
            android:screenOrientation="locked"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".presentation.register.personData.PersonDataRegisterActivity"
            android:exported="false"
            android:screenOrientation="locked" />
        <activity
            android:name=".presentation.splashScreen.SplashScreen"
            android:exported="true"
            android:screenOrientation="locked"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>